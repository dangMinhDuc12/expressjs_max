<%- include('../includes/header') %>
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
<%- include('../includes/navigation') %>

<main>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-product/<%= prod.id %>?_method=PUT <%} else { %>add-product <% } %>" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<% if (editing) { %> <%= prod.title %> <% }%>">
        </div>
        <div class="form-control">
            <label for="imageURL">Image URL</label>
            <input type="text" name="imageURL" id="imageURL" value="<% if (editing) { %> <%= prod.imageURL %> <% }%>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea name="description" id="description"  rows="5"><% if (editing) { %> <%= prod.description %> <% }%></textarea>
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="text" name="price" id="price" value="<% if (editing) { %> <%= prod.price %> <% }%>">
        </div>
        <button type="submit">
            <%
                if (editing === 'true') {
                %>
                    Update Product
                <%
                } else {
                %>
                    Add Product
                <%
                }
            %>
        </button>
    </form>
</main>
<%- include('../includes/footer') %>